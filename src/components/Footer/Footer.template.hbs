<footer data-module="Footer" style="opacity: 0" class="bg-[#6FA0AF] u-load-hide">
  <div
    class="flex relative gap-10 justify-center items-center w-full h-32 max-md:gap-5 max-md:px-5 max-md:py-0 max-sm:flex-col max-sm:gap-4 max-sm:p-5 max-sm:h-auto max-sm:text-center"
  >
    <p class="text-base font-bold leading-4 text-right text-orange-50 max-sm:text-center pt-6 lg:pt-0">
      {{title}}
    </p>
    {{#if logo}}
      <img src="{{logo}}" alt="Remitly Logo" class="object-contain h-[82px] w-[105px]" />
    {{/if}}
    {{#each navigation as |item|}}
      <a
        href="{{item.url}}"
        target="{{item.target}}"
        class="text-base font-bold leading-4 text-orange-50 underline pb-14 lg:pb-0"
      >
        {{item.title}}
      </a>
    {{/each}}
  </div>
  <div class="flex flex-wrap">
    <div class="w-1/2 lg:w-1/3">
      Column 1
    </div>
    <div class="w-1/2 lg:w-1/3">
      Column 2
    </div>
    <div class="w-1/2 lg:w-1/3">
      Column 3
    </div>
    <div class="w-1/2 lg:w-1/3">
      Column 4
    </div>
    <div class="w-1/2 lg:w-1/3">
      Column 5
    </div>
    <div class="w-1/2 lg:w-1/3">
      Column 6
    </div>
  </div>
</footer>