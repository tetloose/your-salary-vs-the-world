<section
  id="{{id}}"
  data-scroll-id="{{id}}"
  data-module="Chapter"
  style="opacity: 0"
  class="chapter u-load-hide u-bg-{{bg}} u-spacing-t-{{pt}} u-spacing-b-{{pb}}"
>
  <div class="l-row">
    <div class="l-row__col u-text-{{color}} u-link-{{link}}">
      <div class="u-small u-uppercase u-bold">
        {{{subtitle}}}
      </div>
      <div class="u-h2 u-bold u-spacing-t-xxsml">
        {{{title}}}
      </div>
      <div class="u-p u-spacing-t-sml">
        {{{content}}}
      </div>
    </div>
  </div>
</section>