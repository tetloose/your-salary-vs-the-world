<section
  data-module="ContentImage"
  style="opacity: 0"
  class="content-image u-load-hide u-bg-{{bg}} u-spacing-t-{{pt}} u-spacing-b-{{pb}}"
>
  <div class="l-row {{rowModifiers}}">
    <div class="l-row__col med-width-6">
      {{#if image}}
        <figure class="content-image__image u-figure {{figureModifiers}}">
          <img class="u-figure__img" src="{{image}}" alt="{{imageAlt}}" loading="lazy" />
        </figure>
      {{/if}}
    </div>
    <div class="l-row__col med-width-6">
      <div class="content-image__content u-text-{{color}} u-link-{{link}}">
        {{#if subtitle}}
          <div class="u-small u-uppercase u-bold">
            {{{subtitle}}}
          </div>
        {{/if}}
        {{#if title}}
          <div class="u-h2 u-bold u-spacing-t-xxsml">
            {{{title}}}
          </div>
        {{/if}}
        {{#if content}}
          <div class="u-content u-spacing-t-sml">
            {{{content}}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>