<section data-module="ContentImage" style="opacity: 0" class="content-image u-load-hide {{containerModifiers}}">
  <div class="l-row {{rowModifiers}}">
    <div class="l-row__col med-width-{{imageCol}}">
      {{#if image}}
        <figure class="u-figure {{imageModifiers}}">
          <img class="u-figure__img" src="{{image}}" alt="{{imageAlt}}" loading="lazy" />
        </figure>
      {{/if}}
    </div>
    <div class="l-row__col med-width-{{contentCol}}">
      <div class="content-image__content {{contentModifiers}}">
        {{#if subtitle}}
          <div class="u-small u-uppercase u-bold">
            {{{subtitle}}}
          </div>
        {{/if}}
        {{#if title}}
          <div class="u-h2 u-bold u-spacing-t-xxsml">
            {{{title}}}
          </div>
        {{/if}}
        {{#if content}}
          <div class="u-content u-spacing-t-xsml">
            {{{content}}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>