<section
  class="flex overflow-hidden flex-col justify-center items-center px-20 py-12 lg:pt-16 lg:pb-32 leading-tight bg-white text-slate-700 max-md:px-5 max-md:pt-24"
>
  <div class="flex flex-col items-center max-w-full w-[640px]">
    <form class="flex flex-col items-center w-full" id="form">
      <h2 class="text-xl font-extrabold text-center uppercase">
        enter your salary:
      </h2>

      <div
        class="flex justify-center self-stretch p-4 mt-6 text-xl text-center whitespace-nowrap bg-white rounded-md border border-solid border-[#B3BECC] max-md:max-w-full"
      >
        <input
          id="wage"
          type="text"
          name="salary"
          value="46000"
          class="text-base font-semibold text-center bg-transparent outline-none w-full"
          aria-label="Salary amount"
          required
        />
      </div>

      <h2 class="mt-12 text-xl font-extrabold text-center uppercase max-md:mt-10">
        choose your currency:
      </h2>

      <div
        class="flex flex-wrap gap-5 justify-center lg:justify-between self-stretch mt-6 w-full text-center bg-white border-[#B3BECC] px-0 max-md:max-w-full cursor-pointer"
        onclick="document.getElementById('currency-select').focus()"
      >
        <select
          id="currency-select"
          class="select border relative rounded-md py-2 text-center text-lg"
          name="region"
          required
        >
          <i class="absolute far fa-chevron-down text-xl"></i>
          <option value="GBP" selected id="gb">
            British Pound Sterling (GBP)
          </option>
          <option value="USD" id="us">
            US dollar (USD)
          </option>
          <option value="EUR" id="eu">
            Euro (EUR)
          </option>
        </select>
      </div>

      <button
        type="submit"
        class="gap-2 self-stretch px-5 py-3 mt-6 lg:mt-12 max-w-full mx-auto text-lg font-semibold leading-relaxed text-white whitespace-nowrap bg-cyan-800 min-h-[51px] rounded-[100px] w-[229px] max-md:mt-10 flex justify-center items-center"
      >
        Calculate
      </button>
    </form>

    <p class="text-center pt-8 lg:pt-12 text-sm">
      This calculator does not store any of your salary information.
    </p>
  </div>
</section>

<section>
  <div class="bg-[#2C415A] py-8 lg:py-12 hidden" id="result">
    <div class="container px-6 lg:px-0 mx-auto flex flex-col gap-8 lg:gap-16">
      <div class="flex flex-col gap-4">
        <h4 class="text-[#FBF8F2] text-base">
          Hover or tap over a country to see how many extra hours you'll need to work to earn your income
        </h4>
        <h3 class="text-white text-xl font-bold uppercase">
          Countries where you will need to work more hours:
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 items-center" id="more">
          <button>
            Show more +
          </button>
        </div>
      </div>

      <div class="flex flex-col gap-4">
        <h4 class="text-[#FBF8F2] text-base">
          Hover or tap over a country to see how many fewer hours you'll need to work to earn your income
        </h4>
        <h3 class="text-white text-xl font-bold uppercase">
          Countries where you will need to work less hours:
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 items-center" id="less"></div>
      </div>
    </div>
  </div>
</section>