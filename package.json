{
  "name": "the-immigration-index",
  "version": "0.0.1",
  "description": "https://www.remitly.com/us/en/landing/the-immigration-index",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "npm install",
    "prepare": "husky",
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:html:fix",
    "lint:js": "eslint ./src",
    "lint:js:fix": "eslint ./src --fix",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:html": "prettier --check \"src/components/**/*.hbs\"",
    "lint:html:fix": "prettier --write \"src/components/**/*.hbs\"",
    "gen:component": "bash .scripts/generate-component",
    "git:commit": "bash toolkit git-commit"
  },
  "author": "James Tetley - Tetloose.com",
  "license": "",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "autoprefixer": "^10.4.22",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-webpack-plugin": "^5.0.1",
    "handlebars": "^4.7.8",
    "handlebars-loader": "^1.7.3",
    "husky": "^9.1.7",
    "image-minimizer-webpack-plugin": "^4.1.4",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-handlebars": "^0.0.1",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-webpack-plugin": "^5.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "5.99.5",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "prettier": {
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "plugins": [
      "prettier-plugin-handlebars"
    ],
    "overrides": [
      {
        "files": "src/components/**/*.hbs",
        "options": {
          "parser": "glimmer",
          "singleQuote": false,
          "printWidth": 120,
          "htmlWhitespaceSensitivity": "css",
          "singleAttributePerLine": true
        }
      },
      {
        "files": "src/templates/*.hbs",
        "options": {
          "parser": "glimmer",
          "singleQuote": false,
          "printWidth": 120,
          "htmlWhitespaceSensitivity": "css",
          "singleAttributePerLine": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "eslint"
    ],
    "*.css": [
      "stylelint --fix",
      "stylelint"
    ],
    "src/components/**/*.hbs": [
      "bash -c 'for file in \"$@\"; do if ! grep -q \"{{>\" \"$file\"; then prettier --write \"$file\"; fi; done' _"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "datatables.net": "^2.3.5",
    "datatables.net-dt": "^2.3.5",
    "html-webpack-plugin": "5.6.3"
  }
}
